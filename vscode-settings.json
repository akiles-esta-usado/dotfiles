{
    // System minimum configuration
    "remote.defaultExtensionsIfInstalledLocally": [
        "GitHub.vscode-pull-request-github"
    ],
    "application.shellEnvironmentResolutionTimeout": 120, // 10 seconds originally
    "redhat.telemetry.enabled": false,
    // Control Version
    "diffEditor.ignoreTrimWhitespace": false,
    "scm.defaultViewMode": "tree",
    "git.autofetch": true,
    "git.blame.editorDecoration.enabled": false,
    // Editor Configuration
    "editor.wordWrap": "on",
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.size": "fill",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.rulers": [
        80,
        100
    ],
    "editor.experimental.treeSitterTelemetry": false,
    // Screencast
    "screencastMode.fontSize": 20,
    "screencastMode.verticalOffset": 3,
    "workbench.startupEditor": "none",
    "workbench.sideBar.location": "right",
    // Rest Client
    "rest-client.previewOption": "exchange",
    "rest-client.enableTelemetry": false,
    "files.associations": {
        "*.html": "jinja-html",
        "*.jinja2": "jinja-html",
    },
    "workbench.editorAssociations": {
        "*.pdf": "default"
    },
    // Extension: Material Icon
    "material-icon-theme.languages.associations": {
        "jinja-html": "html"
    },
    // Extension: djLint Configuration
    // https://stackoverflow.com/questions/60175608/visual-studio-code-and-jinja-templates
    "[html][jinja][jinja-html][django-html]": {
        // "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "monosans.djlint",
        "editor.detectIndentation": false,
        "editor.linkedEditing": true,
        "editor.tabSize": 2
    },
    "emmet.includeLanguages": {
        "jinja-html": "html",
        "jinja2": "html",
        "django-html": "html",
    },
    "djlint.enableLinting": true,
    "djlint.closeVoidTags": true,
    "djlint.formatAttributeTemplateTags": true,
    "djlint.formatCss": true,
    "djlint.formatJs": true,
    "djlint.lineBreakAfterMultilineTag": false,
    "djlint.maxBlankLines": 2,
    "djlint.maxLineLength": 100,
    "djlint.maxAttributeLength": 100,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.wordBasedSuggestions": "off",
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.tabSize": 4
    },
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.enablePerfTelemetry": false,
    "python.analysis.reportExtraTelemetry": false,
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[csharp]": {
        "editor.maxTokenizationLineLength": 2500,
        "editor.formatOnType": true
    },
    "dotnetAcquisitionExtension.enableTelemetry": false,
    "dotnetAcquisitionExtension.sharedExistingDotnetPath": "C:\\Program Files\\dotnet\\dotnet.exe",
    "dotnet.autoInsert.enableAutoInsert": true,
    // Latex
    "latex-utilities.message.update.show": false,
    // Espressif Embedded Development
    "idf.hasWalkthroughBeenShown": true,
    "idf.gitPathWin": "C:\\code\\.espressif\\tools\\idf-git\\2.39.2\\cmd\\git.exe",
    "[veryl]": {
        "editor.formatOnSave": true
    },
    "[nix]": {
        "editor.defaultFormatter": "jnoortheen.nix-ide",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnType": true,
        "editor.formatOnSave": true
    },
    "nix.enableLanguageServer": false,
    "nix.formatterPath": "alejandra",
    "[lua]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "sumneko.lua"
    },
    "Lua.format.defaultConfig": {},
    "Lua.workspace.ignoreDir": [
        ".vscode",
        ".venv",
    ],
    "[typst]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "myriad-dreamin.tinymist"
    },
    "tinymist.formatterMode": "typstyle",
    "tinymist.lint.enabled": true,
    "tinymist.lint.when": "onSave",
    "tinymist.exportPdf": "onType",
    "tinymist.outputPath": "$root/build/$dir/$name",
    "nrf-connect.enableTelemetry": false,
    "update.mode": "manual",
}