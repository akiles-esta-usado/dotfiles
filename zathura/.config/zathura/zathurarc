# Visual
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 5
set adjust-open width

set scroll-hstep -1
set scroll-step 10

# Zoom
map J zoom out
map K zoom in

# Movement
map u scroll half-up
map d scroll half-down
map f scroll full-down
map b scroll full-up
map <Space> scroll half-down

map [fullscreen] u scroll half-up
map [fullscreen] d scroll half-down
map [fullscreen] f scroll full-down
map [fullscreen] b scroll full-up
map [fullscreen] <Space> scroll half-down


# Misc
map r reload
map i recolor
map p print

# Init Configs
set guioptions ''
set show-recent false
set show-hidden true
set selection-clipboard clipboard
